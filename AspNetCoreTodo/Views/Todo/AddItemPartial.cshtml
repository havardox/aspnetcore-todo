@model TodoItem

<form asp-action="AddItem" method="POST">
    <label asp-for="Title">Add a new item:</label>
    <input asp-for="Title">
    <br>
    <label asp-for="DueAt">Due at:</label>
    <input type="text" id="DueAt" placeholder="Click to pick date" />
    <button type="submit">Add</button>
</form>